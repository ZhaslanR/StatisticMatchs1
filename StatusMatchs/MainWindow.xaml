<Window x:Class="LoginAndRegister.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginAndRegister"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="loginBox" HorizontalAlignment="Left" Height="35" Margin="130,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="233"/>
        <Button Content="Sign in" HorizontalAlignment="Left" Height="32" Margin="170,185,0,0" VerticalAlignment="Top" Width="152" Click="Button_Click_1"/>
        <Button Content="Sign up" HorizontalAlignment="Left" Height="38" Margin="170,222,0,0" VerticalAlignment="Top" Width="152" Click="Button_Click"/>
        <TextBlock HorizontalAlignment="Left" Height="35" Margin="37,70,0,0" TextWrapping="Wrap" Text="Login" VerticalAlignment="Top" Width="81"/>
        <TextBlock HorizontalAlignment="Left" Height="39" Margin="37,121,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="81"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="130,121,0,0" VerticalAlignment="Top" Width="233" Height="39"/>

    </Grid>
</Window>
