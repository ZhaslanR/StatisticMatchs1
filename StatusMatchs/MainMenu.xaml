<Window x:Class="LoginAndRegister.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginAndRegister"
        mc:Ignorable="d"
        Title="MainMenu" Height="500" Width="680">
    <StackPanel Orientation="Horizontal" Width="auto" VerticalAlignment="Top" Height="50">
        <Button Content="Жанры" Height="auto"/>
        <Button x:Name="mainButton" Content="Главное" Height="auto"/>
        <Button x:Name="newsButton" Content="Новости" Height="auto"/>
        <Button x:Name="matchsButton" Content="Матчи" Height="auto"/>
        <Button x:Name="discusionButton" Content="Обсуждение" Height="auto" Click="discusionButton_Click"/>
        <Button x:Name="signInButton" Content="Войти" Height="auto" Click="signInButton_Click"/>
        <Button x:Name="signUpButton" Content="Зарегистрироватся" Height="auto"/>
    </StackPanel>
</Window>
